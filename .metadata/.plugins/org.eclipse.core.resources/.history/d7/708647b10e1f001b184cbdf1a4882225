#include <iostream>
using namespace std;

int main() {

	float face;
	float interest;
	int duration;
	float recieve;
	float inter;
	float check;

	cout << "Insert the face value in dollars. \n$";
	cin >> face;

	cout << "Insert the interest percent. \n";
	cin >> interest;
	interest = interest/100;

	cout << "Insert the duration of the payments in years. \n";
	cin >> duration;

	inter =  (face * interest);

	cout << inter;

	recieve =  face - (inter * duration);

	check = (recieve/duration)/(1-interest);

	cout << recieve;

	return 0;
}
