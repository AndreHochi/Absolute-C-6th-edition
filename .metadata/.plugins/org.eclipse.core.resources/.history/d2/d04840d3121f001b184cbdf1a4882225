#include <iostream>
using namespace std;

int main() {

	int occupents;
	int fire;

	cout << "Give the current number of occupents. \n";
	cin >> occupents;

	cout << "Give the maximum room capacity. \n";
	cin >> fire;

	if (occupents > fire) {
		cout << "There are too many people.\n Remove ";
		cout << occupents - fire << " people from the room";
	}
	else {
		cout << "There are less people than the maximum room capacity.";
	}
	return 0;
}
